            "value": "/tmp/packages.list",
            "query": "Install Custom Packages",
            "message": "Install Custom DevOps Packages"
        },
        "patch": {
            "query": "Patch Unattended Installation",
            "message": "Patching Unattended installation"
        },
        "projects": {
